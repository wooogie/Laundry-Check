<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <ImageView
        android:id="@+id/clothesdetail_preview_imageView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/preview_image_height"
        android:layout_marginBottom="-70dp"
        android:scaleType="centerCrop"
        app:srcCompat="@mipmap/ic_launcher" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/button_take_clothespicture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginBottom="70dp"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:src="@drawable/ic_menu_camera"
        android:tint="#ffffff"
        app:elevation="20dp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_heigh"
        android:layout_marginTop="-40dp"/>

    <TextView
        android:id="@+id/name_lable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginRight="@dimen/margin_medium"
        android:layout_weight="0.00"
        android:editable="false"
        android:text="@string/clothes_name"
        android:textSize="@dimen/text_font_size"
        android:textStyle="bold"
        android:visibility="visible" />

    <EditText
        android:id="@+id/clothesdetail_name_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginRight="@dimen/margin_medium"
        android:ems="10"
        android:inputType="text|textPersonName"
        android:text="Name"
        android:textSize="@dimen/text_font_size" />

    <Space
        android:id="@+id/clothesdetail_rfidid_lable"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_heigh"
        android:visibility="visible" />

    <TextView
        android:id="@+id/rfid_id_lable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginRight="@dimen/margin_medium"
        android:layout_weight="0.00"
        android:editable="false"
        android:text="@string/rfid_id"
        android:textSize="@dimen/text_font_size"
        android:textStyle="bold"
        android:visibility="visible" />

    <EditText
        android:id="@+id/clothesdetail_rfid_id_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginRight="@dimen/margin_medium"
        android:ems="10"
        android:enabled="false"
        android:inputType="text|textPersonName"
        android:text="Name"
        android:textSize="@dimen/text_font_size" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_heigh" />

    <TextView
        android:id="@+id/washcount_lable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginRight="@dimen/margin_medium"
        android:layout_weight="0.00"
        android:editable="false"
        android:text="@string/washcount"
        android:textSize="@dimen/text_font_size"
        android:textStyle="bold"
        android:visibility="visible" />

    <EditText
        android:id="@+id/clothesdetail_washcount_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginRight="@dimen/margin_medium"
        android:ems="10"
        android:enabled="false"
        android:inputType="text|textPersonName"
        android:text="Name"
        android:textSize="@dimen/text_font_size" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_heigh" />

    <TextView
        android:id="@+id/last_washed_lable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginRight="@dimen/margin_medium"
        android:layout_weight="0.00"
        android:editable="false"
        android:text="@string/lastwashed"
        android:textSize="@dimen/text_font_size"
        android:textStyle="bold"
        android:visibility="visible" />

    <EditText
        android:id="@+id/clothesdetail_lastwashed_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginRight="@dimen/margin_medium"
        android:ems="10"
        android:enabled="false"
        android:inputType="text|textPersonName"
        android:text="Name"
        android:textSize="@dimen/text_font_size" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_heigh" />

    <TextView
        android:id="@+id/pieces_lable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginRight="@dimen/margin_medium"
        android:layout_weight="0.00"
        android:editable="false"
        android:text="@string/pieces"
        android:textSize="@dimen/text_font_size"
        android:textStyle="bold"
        android:visibility="visible" />

    <EditText
        android:id="@+id/clothesdetail_pieces_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginRight="@dimen/margin_medium"
        android:ems="10"
        android:inputType="number"
        android:text="Name"
        android:textSize="@dimen/text_font_size" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_heigh" />

    <TextView
        android:id="@+id/clothestype_lable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginRight="@dimen/margin_medium"
        android:layout_weight="0.00"
        android:editable="false"
        android:text="@string/clothestype"
        android:textSize="@dimen/text_font_size"
        android:textStyle="bold"
        android:visibility="visible" />

    <EditText
        android:id="@+id/clothesdetail_clothestype_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginRight="@dimen/margin_medium"
        android:ems="10"
        android:inputType="number"
        android:text="Name"
        android:textSize="@dimen/text_font_size" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_heigh" />

</LinearLayout>